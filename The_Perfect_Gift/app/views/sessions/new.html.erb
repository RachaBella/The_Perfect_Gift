<%= render partial: "/layouts/navbar" %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3" align="center">
			<h1 id="sign-in">Login</h1>
			<br><br>
			 <% if @user.errors.any? %>
                    <div  class ="alert alert-dismissible alert-success text-center">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                        <%= pluralize(@user.errors.count, "error") %> prohibited
                        this owner from being saved:
                    </div>
                    <% end %>
                     <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                         <div  class ="alert alert-dismissible alert-success text-center">
                         <button type="button" class="close" data-dismiss="alert">×</button>
                         <li><%= msg %></li>
                         </div>
                        <% end %>
             </ul>

			<%= form_for @user, url: "/sessions", method: "post" do |f| %>
				<div>
				<%= f.text_field :email, placeholder: "Email", :id => "signin-input"%>
				</div>
				<div>
				<%= f.password_field :password, placeholder: "Password", :id => "signin-input"%>
				</div>
				<br><br><br>
				<%= f.submit "Sign In", :class => "btn-primary btn-lg btn-material-blue"%>
			<% end %> 

		</div>
	</div>
</div>
		
