                <%= select_tag(:occasion, options_for_select([['Birthday','Birthday'],['Wedding','Wedding'],['Christmas','Christmas'],['Thanksgiving','Thanksgiving'],['New year','New Year'],['Baby Shower', 'Baby Shower'], ['Wedding Shower', 'Wedding Shower'], ['Hanukah','Hanukah'],['Ramadan','Ramadan'],['Anniversary', 'Anniversary']]), {:id => 'occasion', :style => 'display: inline'}) %>
