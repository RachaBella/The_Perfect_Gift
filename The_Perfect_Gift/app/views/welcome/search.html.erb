                <div class= "Wallop-list"align="center" >
                  <div class="Wallop-item Wallop-item--current" align="center">
                    <img src="<%=@finalResponse[0][:image_url] %>">
                    <hr>
                        <p  id="keyword"><%=@finalResponse[0][:keyword] %></p>
            
                    
                          <p style='display:none' id="url"><%=@finalResponse[0][:affiliate_url] %></p>
                          <p id="price"><%=@finalResponse[0][:price] %> $</p>
                          <p style='display:none' id="description"><%=@finalResponse[0][:description] %></p>
                  
                  </div>
                  <% @finalResponse.drop(1).each do |res|%>
                  <div class="Wallop-item" align="center">
                    <img src="<%= res[:image_url] %>">
                    <hr>  
                        <p  id="keyword"><%= res[:keyword] %></p>
                   
                          <p style='display:none' id="url"><%= res[:affiliate_url] %></p>
                          <p id="price"><%= res[:price] %> $</p>
                          <p style='display:none' id="description"><%= res[:description] %></p>
                  </div>
                  <%end%>
                </div>
                <button class="Wallop-buttonPrevious">Previous</button>
                <button class="Wallop-buttonNext">Next</button>
            </div>
        </div>

    </div>
   
      
      
